# Supabase Configuration (SIBudget Database - expenses, chat_history)
SUPABASE_URL=your_supabase_url_here
SUPABASE_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here
RECEIPT_BUCKET=receipts

# Auth Supabase Configuration (users_insight Database - user authentication)
AUTH_SUPABASE_URL=your_auth_supabase_url_here
AUTH_SUPABASE_KEY=your_auth_supabase_key_here
AUTH_SUPABASE_SERVICE_KEY=your_auth_supabase_service_key_here

# Groq Configuration
GROQ_API_KEY=your_groq_api_key_here

# App Configuration
DEBUG=false

# Auth Configuration (Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))")
SECRET_KEY=your_secret_key_here
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# CORS Configuration (comma-separated list of allowed origins)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Google OAuth (Optional - leave empty to disable)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=https://yourdomain.com/api/auth/google/callback
